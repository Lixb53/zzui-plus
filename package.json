{
  "private": true,
  "packageManager": "pnpm@7.1.0",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "build": "pnpm run -C internal/build start",
    "build:theme": "pnpm run -C packages/theme-chalk build",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "gen": "bash ./scripts/gc.sh",
    "gen:version": "tsx scripts/gen-version.ts",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "stub": "pnpm run -r --parallel stub",
    "prepare": "husky install",
    "postinstall": "pnpm stub && concurrently \"pnpm gen:version\" \"pnpm run -C internal/metadata dev\""
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.182",
    "@types/lodash-es": "^4.17.6",
    "@zzui-plus/components": "workspace:^0.0.1",
    "@zzui-plus/constants": "workspace:*",
    "@zzui-plus/hooks": "workspace:^0.0.1",
    "@zzui-plus/theme-chalk": "workspace:^0.1.0",
    "@zzui-plus/tokens": "workspace:^0.0.1",
    "@zzui-plus/utils": "workspace:*",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.2",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@esbuild-kit/cjs-loader": "^2.4.1",
    "@pnpm/find-workspace-packages": "^4.0.18",
    "@pnpm/logger": "^4.0.0",
    "@pnpm/types": "^8.10.0",
    "@types/fs-extra": "^11.0.1",
    "@types/gulp": "^4.0.10",
    "@types/node": "^18.11.18",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vitest/ui": "^0.28.5",
    "@vue/test-utils": "^2.2.10",
    "@zzui-plus/build-utils": "workspace:^0.0.1",
    "@zzui-plus/eslint-config": "workspace:^0.0.1",
    "c8": "^7.12.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "eslint-define-config": "^1.13.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.0",
    "resize-observer-polyfill": "^1.5.1",
    "tsx": "^3.6.0",
    "type-fest": "^3.5.6",
    "typescript": "^4.9.4",
    "unplugin-vue-macros": "0.11.2",
    "vitest": "^0.26.3",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.0.22"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
